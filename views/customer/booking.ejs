<%- include('../partials/header') %>

  <main class="container py-5">
    <div class="card p-4 shadow-lg">
      <h2 class="text-primary mb-4">
        <i class="fa-solid fa-calendar-check me-2"></i> Đặt phòng: <%= room.roomName %>
      </h2>

      <form action="/customer/bookings/<%= room.roomId %>" method="POST">
        <% if (checkInDate && checkOutDate && numberOfGuests) { %>
          <!-- Nếu người dùng đã chọn từ trước thì hiển thị sẵn -->
          <div class="mb-3">
            <p><strong>Ngày nhận phòng:</strong>
              <%= checkInDate %>
            </p>
            <input type="hidden" name="checkInDate" value="<%= checkInDate %>">
          </div>

          <div class="mb-3">
            <p><strong>Ngày trả phòng:</strong>
              <%= checkOutDate %>
            </p>
            <input type="hidden" name="checkOutDate" value="<%= checkOutDate %>">
          </div>

          <div class="mb-3">
            <p><strong>Số lượng khách:</strong>
              <%= numberOfGuests %>
            </p>
            <input type="hidden" name="numberOfGuests" value="<%= numberOfGuests %>">
          </div>
          <% } else { %>
            <div class="mb-3">
              <label class="form-label">Ngày nhận - trả phòng</label>
              <input type="text" id="dateRange" class="form-control" readonly placeholder="Chọn ngày">
              <!-- Ẩn 2 input thật để controller vẫn nhận đúng -->
              <input type="hidden" name="checkInDate" id="checkInDate">
              <input type="hidden" name="checkOutDate" id="checkOutDate">
            </div>


            <div class="mb-3">
              <label for="numberOfGuests" class="form-label">Số lượng khách</label>
              <input type="number" id="numberOfGuests" name="numberOfGuests" class="form-control" min="1"
                max="<%= room.capacity %>" required>
              <small class="text-muted">Tối đa <%= room.capacity %> khách cho phòng này.</small>
            </div>
            <!-- ✅ Thêm phần chọn số lượng phòng -->
            <% if (quantity) { %>
              <div class="mb-3">
                <p><strong>Số lượng phòng:</strong>
                  <%= quantity %>
                </p>
                <input type="hidden" name="quantity" value="<%= quantity %>">
              </div>
              <% } else { %>
                <div class="mb-3">
                  <label for="quantity" class="form-label">Số lượng phòng muốn đặt</label>
                  <input type="number" id="quantity" name="quantity" class="form-control" min="1"
                    max="<%= room.availableRooms || 1 %>" value="1" required>
                  <small class="text-muted">
                    Còn <%= room.availableRooms %> phòng trống.
                  </small>
                </div>
                <% } %>
                <% } %>


                    <button type="submit" class="btn btn-primary">
                      <i class="fa-solid fa-check me-2"></i> Xác nhận đặt phòng
                    </button>
      </form>

    </div>
  </main>

  <!-- Thêm CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css">
  <!-- Thêm JS (cần jQuery và moment.js) -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/moment.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
  <!-- js cho phần chọn ngày tháng -->
  <script src="/javascript/dateRangePicker.js"></script>
  <%- include('../partials/footer') %>