<!DOCTYPE html>
<html>
<head>
  <title>Danh sách phòng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
  <%- include('../partials/header') %>
<body class="container mt-4">
  <div class="row">

    <% rooms.forEach(room => { %>
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="<%= room.image || 'https://via.placeholder.com/300x200' %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= room.roomName %></h5>
            <p class="card-text"><%= room.description %></p>
            <p><strong>Giá:</strong> <%= room.price %> VND</p>
            <p><strong>Nhà cung cấp:</strong> <%= room.Provider.providerName %></p>
            <a href="/booking/<%= room.roomId %>" class="btn btn-primary">Đặt phòng</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</body>
  <%- include('../partials/footer') %>

</html>
